<Window x:Class="DriveBender.UI.CreatePoolDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Pool" Height="300" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Pool Name -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <Label Content="Pool Name:"/>
            <TextBox Name="PoolNameTextBox" Height="25"/>
        </StackPanel>
        
        <!-- Mount Point -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <Label Content="Mount Point (optional):"/>
            <TextBox Name="MountPointTextBox" Height="25"/>
        </StackPanel>
        
        <!-- Drives -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <Label Content="Drives:"/>
            <ListBox Name="DrivesListBox" Height="100"/>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Button Name="AddDriveButton" Content="Add Drive" Width="80" Height="25" 
                        Click="AddDriveButton_Click" Margin="0,0,5,0"/>
                <Button Name="RemoveDriveButton" Content="Remove" Width="80" Height="25" 
                        Click="RemoveDriveButton_Click" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="OKButton" Content="Create" Width="80" Height="30" 
                    Click="OKButton_Click" IsDefault="True" Margin="0,0,5,0"/>
            <Button Name="CancelButton" Content="Cancel" Width="80" Height="30" 
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>